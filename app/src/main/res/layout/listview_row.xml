<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/landmarkName"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/landmarkCoverage"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/landmarkName"
        android:layout_alignStart="@+id/landmarkName"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/passenger_count"
        android:layout_width="114dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/landmarkCoverage"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>